{
  "name": "vitube",
  "version": "1.0.0",
  "main": "electron/main.js",
  "description": "Personal YouTube Client",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.vitube.local",
    "productName": "ViTube",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      "assets/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "better-sqlite3": "^9.4.0",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.1.1",
    "googleapis": "^128.0.0",
    "gsap": "^3.13.0",
    "hls.js": "^1.6.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  }
}
